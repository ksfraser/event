{
    "name": "ksfraser/event-system",
    "description": "PSR-14 compliant event system with extended listener management",
    "type": "library",
    "license": "GPL-3.0",
    "authors": [
        {
            "name": "KS Fraser",
            "email": "dev@ksfraser.com"
        }
    ],
    "require": {
        "php": ">=8.1",
        "psr/event-dispatcher": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Ksfraser\\EventSystem\\": "src/EventSystem/",
            "Ksfraser\\EventSystem\\Contracts\\": "src/Contracts/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ksfraser\\EventSystem\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "analyze": "phpstan analyze"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}